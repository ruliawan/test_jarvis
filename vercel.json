{
  "version": 2,
  "builds": [
    { "src": "backend/src/server.js", "use": "@vercel/node" },
    { "src": "frontend/vite.config.js", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/server.js" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
